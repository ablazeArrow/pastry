{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                                            
    "outDir": "./dist",                                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,         
    "strict": true,                                   
    "noImplicitAny": true,                                
    "skipLibCheck": true
  },
  "include": ["src/**/*", "tests/**/*", "src/reporter.ts"],
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "dist", "temp/*"]
  }

}
